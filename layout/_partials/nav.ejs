<% if (page.total > 1) { %>
<section class="nav">
  <% if (page.prev) { %>
  <a href="<%- url_for(page.prev_link) %>" title="Show recent posts"><i class="fa fa-chevron-left"></i></a>
  <% } else { %>
  <i class="fa fa-chevron-left no"></i>
  <% } %>
  <% if (page.next) { %>
  <a href="<%- url_for(page.next_link) %>" title="Show older posts"><i class="fa fa-chevron-right"></i></a>
  <% } else { %>
  <i class="fa fa-chevron-right no"></i>
  <% } %>
</section>
<% } %>

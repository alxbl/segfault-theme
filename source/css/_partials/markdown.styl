// vim:tw=80:sw=2:ts=2
// Markdown-rendered HTML
main.post
  blockquote p
    border-left 3px solid $accent
    border-radius 3px
    padding $margin-base
    background $code-bg-color
  p, li
    code
      background $code-bg-color
      border 1px solid $code-border-color
      border-radius 3px
      padding 1px 2px
  p
    margin-bottom $margin-base
    margin-top 0
    text-align justify
  img
    max-width 100%
    height auto
    margin 10px auto
    display block

  h1, h2, h3, h4, h5, h6
    margin 2 * $margin-base 0

  ul, ol
    margin-left 4 * $margin-base
    margin-bottom 4 * $margin-base
    margin-top 4 * $margin-base
    li
      margin-bottom: 2 * $margin-base

  hr
    border 0
    height 1px
    margin 2em 3em
    background $transparent
